<!DOCTYPE html>
<html lang="">

<head>
    <title>Public Pastes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="container mt-5">
    <h1>Public Pastes</h1>
    <div class="mb-3">
        <a href="/" class="btn btn-primary">Create New Paste</a>
    </div>

    <div class="row">
        <% pastes.forEach(function(paste) { %>
            <div class="col-md-6 mb-3">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <%= paste.title %>
                        </h5>
                        <span class="badge bg-primary">
                            <%= paste.language %>
                        </span>
                    </div>
                    <div class="card-body">
                        <pre class="mb-0"
                            style="max-height: 150px; overflow-y: auto;"><%= paste.content.substring(0, 200) %><%= paste.content.length > 200 ? '...' : '' %></pre>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-between align-items-center">
                            <small>Created: <%= new Date(paste.created_at).toLocaleString('en-US', {
                                    timeZone: 'Asia/Ho_Chi_Minh', dateStyle: 'medium', timeStyle: 'medium' }) %>
                            </small>
                            <div>
                                <span class="badge bg-secondary me-2">Views: <%= paste.views %></span>
                                <% if (paste.expires_at && new Date(paste.expires_at) <= new Date()) { %>
                                    <span class="badge bg-danger me-2">Expired</span>
                                <% } %>
                                <a href="/paste/<%= paste.id %>" class="btn btn-sm btn-primary">View Full</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
    </div>
</body>

</html>